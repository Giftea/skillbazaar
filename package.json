{
  "name": "skillbazaar",
  "version": "1.0.0",
  "description": "A marketplace for on-chain skills powered by pinion-os",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "skillbazaar": "./dist/cli/publish.js"
  },
  "scripts": {
    "dev": "concurrently -n marketplace,skills,mcp,frontend -c cyan,magenta,yellow,green \"npm run dev:marketplace\" \"npm run dev:skills\" \"npm run dev:mcp\" \"npm run dev:frontend\"",
    "dev:marketplace": "nodemon --watch src --ext ts --exec tsx src/marketplace/server.ts",
    "dev:skills": "tsx src/skills/contract-auditor.ts & tsx src/skills/wallet-scorer.ts & tsx src/skills/gas-estimator.ts",
    "dev:mcp": "tsx src/mcp/server.ts",
    "dev:frontend": "cd src/frontend && npm run dev",
    "demo": "tsx src/client/demo.ts",
    "build": "tsc",
    "mcp": "tsx src/mcp/server.ts",
    "cli": "tsx src/cli/publish.ts",
    "start:marketplace": "node dist/marketplace/server.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.27.1",
    "better-sqlite3": "^9.4.3",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "inquirer": "^13.3.0",
    "ora": "^9.3.0",
    "pinion-os": "latest"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.10",
    "@types/express": "^4.17.21",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^20.14.0",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.4",
    "tsx": "^4.21.0",
    "typescript": "^5.4.5"
  }
}
