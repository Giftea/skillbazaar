# Your Base wallet private key (must hold USDC on Base mainnet for x402 payments)
PINION_PRIVATE_KEY=0xYOUR_PRIVATE_KEY_WITH_USDC_ON_BASE

# Your wallet address (payment destination for skill servers)
ADDRESS=0xYOUR_WALLET_ADDRESS

# Marketplace API port
PORT=3000

# Anthropic API key (used by the chat skill, optional for other skills)
ANTHROPIC_API_KEY=your_anthropic_key_for_chat_skill

# Base network (base = mainnet, base-sepolia = testnet)
PINION_NETWORK=base

# CLI marketplace URL override (optional â€” defaults to http://localhost:3000)
# MARKETPLACE_URL=http://localhost:3000
